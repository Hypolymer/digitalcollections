{% extends "base.html.twig" %}

{% block title %}Collections{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    
	<div id="fullpage">
		<div id="fullpage-title">
			<h1>Collections</h1>
		</div>
		<div id="collections">
			{% for doc in data.response.solr_results.response.docs %}
				<div class="search-result">
					<a class="search-result-imgwrap" href="/collection/{{ doc.id }}"><img src="/item/{{doc.id}}/loris/PREVIEW/full/500,/0/default.jpg"></a>
					<a class="search-result-title" href="/collection/{{ doc.id }}">{{ doc.dc_title[0] }}</a>
				</div>
			{% endfor %}
		</div>
	</div>
	
{% endblock %}
