{% import "macros.html.twig" as m %}
{% extends "item.html.twig" %}

{% block item_content %}

	<!-- static -->
	<div id="viewer">
		<div id="static">
			<div id="viewer-nest">
				<!-- link out -->
				{# <a href="/mirador?id={{data.response.pid}}&type=ImageView"><img src="/item/{{data.response.pid}}/preview"/></a> #}
				<!-- flip to mirador -->
				<span style="cursor:pointer;" onclick="$('#static').toggle(); $('#mirador').toggle(); return false;"><img src="/item/{{data.response.pid}}/preview"/></a>
			</div>
			<div id="viewer-ribbon">
				<div id="viewer-ribbon-prev"></div>
				<div id="viewer-ribbon-next"></div>
				<div id="viewer-ribbon-nest">
					{% for part in data.response.content_type_specific.imageParts.sorted %}
						<div><img src="/item/{{data.response.pid}}/loris/{{part.thumbnail}}/full/full/0/default.jpg"/></div>
					{% endfor %}
				</div>
			</div>
		</div>
		<div id="mirador" style="display:none;">
			<iframe title="Mirador" src="/mirador?id={{data.response.pid}}&type=ImageView" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" height="800px" width="100%"></iframe>
		</div>
	</div>

	<!-- Mirador -->
	{# <div id="viewer">
		<iframe title="Mirador" src="/mirador?id={{data.response.pid}}&type=ImageView" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" height="600px" width="100%"></iframe>
	</div> #}

{% endblock %}

{% block item_downloads %}

	<div id="details-nest-right-download">
		<div class="label">Download</div>
		<a href="/api/item/{{data.response.pid}}/loris/{{data.response.content_type_specific.imageParts.sorted[0].jp2}}/full/full/0/default.jpg">Small</a>
		<a href="/api/item/{{data.response.pid}}/loris/{{data.response.content_type_specific.imageParts.sorted[0].jp2}}/full/full/0/default.jpg">Medium</a>
		<a href="/api/item/{{data.response.pid}}/loris/{{data.response.content_type_specific.imageParts.sorted[0].jp2}}/full/full/0/default.jpg">Large</a>
		<a href="/api/item/{{data.response.pid}}/loris/{{data.response.content_type_specific.imageParts.sorted[0].jp2}}/full/full/0/default.jpg">Full Size</a>
	</div>

{% endblock %}
